{
  "apps": [
    {
      "name": "goliath-backend",
      "script": "./goliath-backend",
      "cwd": "/home/foundry/goliath",
      "interpreter": "none",
      "env": {
        "PORT": "3010"
      },
      "instances": 1,
      "autorestart": true,
      "watch": false,
      "max_memory_restart": "1G",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "error_file": "/home/foundry/goliath/logs/error.log",
      "out_file": "/home/foundry/goliath/logs/out.log",
      "merge_logs": true
    }
  ]
}

